{
  "manifest_version": 3,

  "name": "dl-utils",
  "description": "Queue up downloads and show the queue",
  "version": "1.0",
  "icons": {"128": "icon.png"},

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.vrt.be/vrtmax/*",
        "*://*.goplay.be/*",
        "*://*.vtmgo.be/*",
        "*://*.youtube.com/*"
      ],
      "js": ["js/vendor.js", "js/content_script.js"],
      "css": ["css/variables.css","css/notifications.css"]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "tabs",
    "storage"
  ],

  "host_permissions": [
    "*://*.vrt.be/*",
    "*://*.goplay.be/*",
    "*://*.vtmgo.be/*",
    "*://*.youtube.com/*"
  ]
}
